{
    "ts-node": {
        "transpileOnly": true,
        "files": true,
        "skipLibCheck":true
        
    },
    "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": false,
    "target": "es2021",
    "module": "commonjs",
    "strict": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true,

    "esModuleInterop": true,    
    "strictNullChecks": true,
        "types": ["node"]
    },
    "include": ["src/**/*.ts" ]
    
}